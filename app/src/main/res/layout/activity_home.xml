<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icerockdev.babenko.HomeActivity">

    <EditText
        android:id="@+id/fieldsRequestUrlEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textWebEmailAddress"
        android:hint="@string/request_fields_edittext_url_hint"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/getFieldsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_fields_button_text"
        android:layout_marginTop="@dimen/request_fields_button_top_margin"
        app:layout_constraintTop_toBottomOf="@+id/fieldsRequestUrlEditText"
        app:layout_constraintRight_toRightOf="@+id/fieldsRequestUrlEditText"
        app:layout_constraintLeft_toLeftOf="@+id/fieldsRequestUrlEditText" />


</android.support.constraint.ConstraintLayout>
