<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pictureElementImgView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/image_element_picture_margin_vertical"
            android:layout_marginLeft="@dimen/image_element_picture_margin_horizontal"
            android:layout_marginRight="@dimen/image_element_picture_margin_horizontal"
            android:layout_marginTop="@dimen/image_element_picture_margin_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pictureElementId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/image_element_id_margin_vertical"
                android:layout_marginLeft="@dimen/image_element_id_margin_horizontal"
                android:layout_marginRight="@dimen/image_element_id_margin_horizontal"
                android:layout_marginTop="@dimen/image_element_id_margin_vertical"
                android:text="Id"
                android:textSize="@dimen/image_element_id_text_size" />

            <TextView
                android:id="@+id/pictureElementTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/image_element_title_margin_vertical"
                android:layout_marginLeft="@dimen/image_element_title_margin_horizontal"
                android:layout_marginRight="@dimen/image_element_title_margin_horizontal"
                android:layout_marginTop="@dimen/image_element_title_margin_vertical"
                android:text="Title" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
